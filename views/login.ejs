<%- include('templates/header.ejs') %> 

    <div class="centered">
        <form action="/login" method="post" id="auth">
            <span class="title">Login</i></span>
            <div class="row">
                <input type="text" name="login" id="login" placeholder="Input your login..." required autocomplete="username">
                <span data-message="login"></span>
            </div>
            <div class="row">
                <input type="password" name="password" id="password" placeholder="Input your password..." required autocomplete="current-password">
                <span data-message="password"></span>
            </div>
            <div class="row">
                <input type="submit" value="Sign in">
            </div>
            <span class="additional">
                Don't have an account? 
                <a href="/register">
                    Sign up
                </a>
            </span>
        </form>
        <script src="/js/formValidator.js" type="text/javascript"></script>
    </div>

<%- include('templates/footer.ejs') %> 
