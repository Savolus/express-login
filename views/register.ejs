<%- include('templates/header.ejs') %> 

    <div class="centered">
        <form action="/register" method="post" id="auth">
            <span class="title">Create account</span>
            <div class="row">
                <input type="text" name="login" id="login" placeholder="Input your login..." required autocomplete="username">
                <span data-message="login"></span>
            </div>
            <div class="row">
                <input type="email" name="email" id="email" placeholder="Input your email..." required autocomplete="email">
                <span data-message="email"></span>
            </div>
            <div class="row">
                <input type="password" name="password" id="password" placeholder="Input your password..." required autocomplete="new-password">
                <span data-message="password"></span>
            </div>
            <div class="row">
                <input type="submit" value="Sign up">
            </div>
            <span class="additional">
                Already have an account? 
                <a href="/login">
                    Sign in
                </a>
            </span>
        </form>
        <script src="/js/formValidator.js" type="text/javascript"></script>
    </div>

<%- include('templates/footer.ejs') %> 
